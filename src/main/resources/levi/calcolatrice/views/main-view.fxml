<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox fx:id="calcolatrice" alignment="CENTER" onKeyPressed="#tastiera" spacing="20.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="levi.calcolatrice.controller.MainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <Label fx:id="operazione" alignment="CENTER_RIGHT" prefWidth="200.0" style="-fx-border-color: black; -fx-background-color: white;">
         <font>
            <Font name="System Bold" size="36.0" />
         </font>
      </Label>
      <HBox alignment="CENTER" spacing="10.0" VBox.vgrow="ALWAYS">
         <children>
            <Button fx:id="clearBtn" maxHeight="Infinity" maxWidth="Infinity" onAction="#cancella" text="CE" HBox.hgrow="ALWAYS" />
            <Button fx:id="pAperta" maxHeight="Infinity" maxWidth="Infinity" onAction="#modifica" text="(" HBox.hgrow="ALWAYS" />
            <Button fx:id="pChiusa" maxHeight="Infinity" maxWidth="Infinity" onAction="#modifica" text=")" HBox.hgrow="ALWAYS" />
            <Button fx:id="back" maxHeight="Infinity" maxWidth="Infinity" onAction="#indietro" text="&lt;--" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <HBox alignment="CENTER" spacing="10.0" VBox.vgrow="ALWAYS">
         <children>
            <Button fx:id="b7" maxHeight="Infinity" maxWidth="Infinity" minHeight="-Infinity" minWidth="-Infinity" onAction="#modifica" text="7" HBox.hgrow="ALWAYS" />
            <Button fx:id="b8" maxHeight="Infinity" maxWidth="Infinity" minHeight="-Infinity" minWidth="-Infinity" onAction="#modifica" text="8" HBox.hgrow="ALWAYS" />
            <Button fx:id="b9" maxHeight="Infinity" maxWidth="Infinity" minHeight="-Infinity" minWidth="-Infinity" onAction="#modifica" text="9" HBox.hgrow="ALWAYS" />
            <Button fx:id="div" maxHeight="Infinity" maxWidth="Infinity" minHeight="-Infinity" minWidth="-Infinity" onAction="#modifica" text="/" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <HBox alignment="CENTER" spacing="10.0" VBox.vgrow="ALWAYS">
         <children>
            <Button fx:id="b4" maxHeight="Infinity" maxWidth="Infinity" minHeight="-Infinity" minWidth="-Infinity" onAction="#modifica" text="4" HBox.hgrow="ALWAYS" />
            <Button fx:id="b5" maxHeight="Infinity" maxWidth="Infinity" minHeight="-Infinity" minWidth="-Infinity" onAction="#modifica" text="5" HBox.hgrow="ALWAYS" />
            <Button fx:id="b6" maxHeight="Infinity" maxWidth="Infinity" minHeight="-Infinity" minWidth="-Infinity" onAction="#modifica" text="6" HBox.hgrow="ALWAYS" />
            <Button fx:id="molt" maxHeight="Infinity" maxWidth="Infinity" minHeight="-Infinity" minWidth="-Infinity" onAction="#modifica" text="*" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <HBox alignment="CENTER" spacing="10.0" VBox.vgrow="ALWAYS">
         <children>
            <Button fx:id="b1" maxHeight="Infinity" maxWidth="Infinity" minHeight="-Infinity" minWidth="-Infinity" onAction="#modifica" text="1" HBox.hgrow="ALWAYS" />
            <Button fx:id="b2" maxHeight="Infinity" maxWidth="Infinity" minHeight="-Infinity" minWidth="-Infinity" onAction="#modifica" text="2" HBox.hgrow="ALWAYS" />
            <Button fx:id="b3" maxHeight="Infinity" maxWidth="Infinity" minHeight="-Infinity" minWidth="-Infinity" onAction="#modifica" text="3" HBox.hgrow="ALWAYS" />
            <Button fx:id="sott" maxHeight="Infinity" maxWidth="Infinity" minHeight="-Infinity" minWidth="-Infinity" onAction="#modifica" text="-" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <HBox alignment="CENTER" spacing="10.0" VBox.vgrow="ALWAYS">
         <children>
            <Button fx:id="pow" layoutX="10.0" layoutY="10.0" maxHeight="Infinity" maxWidth="Infinity" minHeight="-Infinity" minWidth="-Infinity" text="^" />
            <Button fx:id="b0" maxHeight="Infinity" maxWidth="Infinity" minHeight="-Infinity" minWidth="-Infinity" onAction="#modifica" text="0" HBox.hgrow="ALWAYS" />
            <Button fx:id="eq" maxHeight="Infinity" maxWidth="Infinity" minHeight="-Infinity" minWidth="-Infinity" onAction="#risolvi" text="=" HBox.hgrow="ALWAYS" />
            <Button fx:id="addiz" maxHeight="Infinity" maxWidth="Infinity" minHeight="-Infinity" minWidth="-Infinity" onAction="#modifica" text="+" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <HBox alignment="CENTER" layoutX="30.0" layoutY="609.0" spacing="10.0">
         <children>
            <Button fx:id="conv" maxHeight="Infinity" maxWidth="Infinity" minHeight="-Infinity" minWidth="-Infinity" onAction="#converti" text="converti risultato" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
   </children>
</VBox>
